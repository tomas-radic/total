<% if selected_season.present? && @tournaments.any? %>
  <div class="flex flex-wrap w-full">
    <% @tournaments.each.with_index do |tournament, idx| %>
      <%= render "tournaments/tournament", tournament: tournament %>
    <% end %>
  </div>
<% else %>
  <p class="p-8 text-center">Nie su vypísané zatiaľ žiadne turnaje.</p>
<% end %>
