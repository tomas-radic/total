<div class="w-full inline-block min-h-300px border-t md:border-l border-white <%= tournament.color_base %> md:w-1/3 lg:w-1/4" style="position: relative;">
  <h2 class="primary-color px-4 py-3 text-3xl <%= rand(0..1) == 0 ? 'text-left' : 'text-right' %>">
    <%= tournament.name %>
  </h2>
  <p class="text-center primary-color">
    <%= tournament.begin_date.to_s %>
    <% if tournament.end_date > tournament.begin_date %>
      -
      <%= tournament.end_date.to_s %>
    <% end %>
  </p>
  <p class="default-color p-2">
    <%= tournament.main_info.gsub("\n", "<br>").html_safe %>
  </p>
  <p class="p-3 w-full grid justify-items-center" style="position: absolute; bottom: 0;">
    <%= link_to "Vstúpiť", tournament_path(tournament), class: "justify-self-auto button button-blue" %>
  </p>
</div>
