<%= link_to tournament_path(tournament), class: "today__tournaments__link" do %>
  <%= content_tag :div, class: "today__tournaments__tile #{tournament.color_base_css}" do %>
    <p class="accent-color today__tournaments__name"><%= tournament.name %></p>
    <div>
      <p class="default-color today__tournaments__date">
        <%= app_date tournament.begin_date %>
        <% if tournament.end_date > tournament.begin_date %>
          -
          <%= app_date tournament.end_date %>
        <% end %>
      </p>
      <p class="today__tournaments__enter">
        <%= link_to "Vstúpiť", tournament_path(tournament), class: "btn btn-success" %>
      </p>
    </div>
  <% end %>
<% end %>
