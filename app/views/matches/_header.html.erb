<section id="match-header" class="page-header <%= match_color_base(match) %>">
  <div></div>
  <div class="page-header__heading accent-color">
    <h2>
      <%= match.side(1) %>
    </h2>
    <p>vs</p>
    <h2>
      <%= match.side(2) %>
    </h2>
  </div>
  <p class="page-header__text default-color">
    <% if match.date %>
      <%= app_date_span match.date %>
      <%= match.play_time %>
      <%= match.place&.name %>
    <% end %>
  </p>
</section>
