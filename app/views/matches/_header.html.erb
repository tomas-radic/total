<section id="match-header" class="header <%= match_color_base(match) %>">
  <div class="dominant-heading-wrapper">
    <h2 class="dominant-heading primary-color">
      <%= match.side(1) %>
    </h2>
    <p class="text-2xl md:text-4xl text-center primary-color">vs</p>
    <h2 class="dominant-heading primary-color">
      <%= match.side(2) %>
    </h2>
  </div>
  <% if match.date %>
    <p class="secondary-text default-color">
      <% if match.date %>
        <%= app_date_span match.date %>
        <%= match.play_time %>
      <% end %>
      <% if match.place %>
        <%= match.place.name %>
      <% end %>
    </p>
  <% end %>
</section>
