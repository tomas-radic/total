
  <tr id="dashboard_player_<%= player.id %>">
    <td>
      <%= player.name %>
    </td>
    <td>
      <%= turbo_frame_tag "player_enrollment_#{player.id}" do %>
        <% if player.enrollments.find { |e| (e.season_id == season.id) && e.canceled_at.blank? } %>
          <%= form_with url: manager_toggle_enrollment_path(player_id: player.id) do |f| %>
            <%= f.submit "prihlásený", class: "underline text-green-600 text-sm" %>
          <% end %>
        <% else %>
          <%= form_with url: manager_toggle_enrollment_path(player_id: player.id) do |f| %>
            <%= f.submit "odhlásený", class: "underline text-red-400 text-sm" %>
          <% end %>
        <% end %>
      <% end %>
    </td>
    <td>
      <%= turbo_frame_tag "player_access_#{player.id}" do %>
        <% if player.access_denied_since.present? %>
          <%= form_with url: grant_access_manager_player_path(player) do |f| %>
            <%= f.submit "blokovaný", class: "underline text-red-400 text-sm" %>
          <% end %>
        <% else %>
          <%= form_with url: deny_access_manager_player_path(player) do |f| %>
            <%= f.submit "povolený", class: "underline text-green-600 text-sm" %>
          <% end %>
        <% end %>
      <% end %>
    </td>
  </tr>

