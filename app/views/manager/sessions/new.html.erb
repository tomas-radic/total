<div class="page__content">
  <h2 class="text-center u-fs-giant">Prihlásenie</h2>
  <div class="vertical-form">
    <div class="vertical-form__controls">
      <%= form_for resource, as: resource_name, url: session_path(resource_name),
                   data: { turbo: false } do |f| %>

        <div class="mt-4">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <small><%= error_for(:email, resource) %></small>
        </div>

        <div class="mt-4">
          <%= f.label :password, "Heslo", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          <small><%= error_for(:password, resource) %></small>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mt-2">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Zapamätaj si ma", class: "form-check-label" %>
            </div>
          <% end %>
        </div>

        <div class="mt-4 text-center">
          <%= f.submit "Prihlásiť", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
